<% if current_user.already_favorited?(micropost) %>
    <%= link_to 'お気に入りをはずす', micropost_favorites_path(micropost), method: :delete, class: 'btn btn-danger btn-block'%>
<% else %>
    <%= link_to 'お気に入り', micropost_favorites_path(micropost), method: :post, class: 'btn btn-primary btn-block'%>
<% end %>